<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxytiandi.sharding.repository.TOrderRepository">
    
    <resultMap id="baseResultMap" type="com.cxytiandi.sharding.po.TOrder">
        <result column="orderId" property="id" jdbcType="INTEGER" />
    </resultMap>
    


    <select id="findOrder" parameterType="com.cxytiandi.sharding.po.TOrder" resultType="com.cxytiandi.sharding.po.TOrder">
       SELECT
            a.order_id as orderId, b.*
        FROM
            t_order a
         JOIN t_order_item b ON a.order_id = b.order_id
        WHERE
            a.order_id = #{orderId}
    </select>
    

</mapper>
